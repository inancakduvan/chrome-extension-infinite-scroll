{
    "manifest_version": 2,
    "name": "Infinite Scroll",
    "version": "0.1",
    "description": "Scroll forever",
    "background": {
        "persistent": true,
        "scripts": [
            "js/background.js"
        ]
    },
    "permissions": [
        "contextMenus",
        "activeTab"
    ]
}